# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/job-automation
MONGODB_TEST_URI=mongodb://localhost:27017/job-automation-test

# ============================================
# API SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
API_VERSION=v1
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:4200

# ============================================
# JOB API INTEGRATIONS
# ============================================

# JSearch (RapidAPI) - https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=your-jsearch-api-key-from-rapidapi
JSEARCH_API_HOST=jsearch.p.rapidapi.com

# Adzuna API - https://developer.adzuna.com/
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key
ADZUNA_COUNTRY=us

# Remotive API - https://remotive.com/api
REMOTIVE_API_KEY=your-remotive-api-key

# The Muse API - https://www.themuse.com/developers/api/v2
THEMUSE_API_KEY=your-themuse-api-key

# ============================================
# AI & MATCHING SERVICES
# ============================================

# OpenAI API - https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# OR use AWS Comprehend
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Matching Configuration
MIN_MATCH_SCORE=70
AUTO_APPLY_THRESHOLD=75

# ============================================
# CAPTCHA SOLVING
# ============================================

# 2captcha API - https://2captcha.com/
CAPTCHA_API_KEY=your-2captcha-api-key
CAPTCHA_SOFT_ID=your-2captcha-soft-id

# ============================================
# AWS SERVICES (PRODUCTION)
# ============================================

# S3 for Resume Storage
AWS_S3_BUCKET=job-automation-resumes
AWS_S3_REGION=us-east-1

# Lambda Configuration
AWS_LAMBDA_ROLE=arn:aws:iam::123456789012:role/lambda-execution-role

# ECS/Fargate Configuration
AWS_ECS_CLUSTER=job-automation-cluster
AWS_ECS_TASK_DEFINITION=automation-task

# ============================================
# EMAIL NOTIFICATIONS
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=Job Automation <noreply@jobautomation.com>

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:4200
FRONTEND_BUILD_PATH=../frontend/dist/job-automation

# ============================================
# PUPPETEER CONFIGURATION
# ============================================
PUPPETEER_HEADLESS=true
PUPPETEER_SLOW_MO=100
PUPPETEER_TIMEOUT=30000
PUPPETEER_SCREENSHOT_DIR=./screenshots
PUPPETEER_MAX_CONCURRENT=3

# Browser Configuration
CHROME_PATH=/usr/bin/chromium-browser
CHROME_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# ============================================
# JOB FETCHER CONFIGURATION
# ============================================
FETCH_INTERVAL_HOURS=6
FETCH_JOBS_PER_SEARCH=50
FETCH_MAX_PAGES=5

# Job Search Keywords (comma-separated)
JOB_KEYWORDS=MERN Stack,Full Stack Developer,Node.js Developer,React Developer,AWS Developer

# Job Search Locations (comma-separated)
JOB_LOCATIONS=Remote,New York,San Francisco,Austin,Seattle

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Rate Limiting
MAX_APPLICATIONS_PER_DAY=50
MAX_APPLICATIONS_PER_COMPANY=3
MIN_DELAY_BETWEEN_APPS_MS=300000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30d

# ============================================
# REDIS (FOR CACHING & QUEUES)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# BULL QUEUE CONFIGURATION
# ============================================
QUEUE_NAME=job-applications
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=60000

# ============================================
# WEBHOOK INTEGRATIONS (OPTIONAL)
# ============================================
WEBHOOK_ON_APPLICATION_SUBMITTED=
WEBHOOK_ON_APPLICATION_SUCCESS=
WEBHOOK_ON_APPLICATION_FAILED=
WEBHOOK_SECRET=your-webhook-secret

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AUTO_APPLY=true
ENABLE_CAPTCHA_SOLVING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_DAILY_SUMMARY=true

# ============================================
# DEVELOPMENT TOOLS
# ============================================
ENABLE_DEBUG_MODE=false
SAVE_SCREENSHOTS=true
SAVE_APPLICATION_HTML=false
MOCK_APPLICATIONS=false
